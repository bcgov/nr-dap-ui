<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>List of Roles</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <%- include('../partials/header', { title: 'Role Management' }) %>
    <h1>Roles</h1>
    <a href="/roles/add">Add New Role</a>
    <table>
        <thead>
            <tr>
                <th>Role Name</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% roles.forEach(role => { %>
                <tr>
                    <td><%= role.rolename %></td>
                    <td><%= role.description %></td>
                    <td>
                        <form method="post" action="/roles/delete/<%= role.roleid %>" onsubmit="return confirm('Are you sure you want to delete this role?');">
                            <a href="/roles/edit/<%= role.roleid %>" class="edit-link">Edit</a>
                            <button type="submit" class="button-del">Delete</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
    <%- include('../partials/footer') %>
</body>
</html>
